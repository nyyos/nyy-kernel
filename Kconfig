mainmenu "Nyy Kernel configuration"

menu "Sanitizers"

config DISABLE_ASSERTS
  bool "Disable asserts in code"
  default n

config UBSAN
  bool "Enable UBSAN"
  default n

config STACKGUARD
  bool "Enable stack protector"
  default y

endmenu

config SMP 
    bool "Enable SMP"
    default y

source "$(ROOT)/kernel/Kconfig"
